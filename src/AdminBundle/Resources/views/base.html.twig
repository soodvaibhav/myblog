{% set route = app.request.attributes.get('_route') %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Admin</title>
        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
        <link href="/css/library/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="/css/library/font-awesome.min.css" rel="stylesheet" type="text/css" />
        <link href="/css/admin/style.css" rel="stylesheet" type="text/css" />
    </head>
    <body class="skin-black">
        <header class="header">
            <a href="{{ path('admin_homepage') }}" class="logo">
                Admin
            </a>
            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
            </nav>
        </header>
        <div class="wrapper row-offcanvas row-offcanvas-left">
            <aside class="left-side sidebar-offcanvas">
                <section class="sidebar">
                    <div class="user-panel">
                        <div class="pull-left image">
                            <img src="/images/default/avatar.png" class="img-circle" alt="User Image" />
                        </div>
                        <div class="pull-left info">
                            <p>Hello, {{ app.user.username }}</p>
                            <a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-power-off"></i> logout</a>
                        </div>
                    </div>
                    <ul class="sidebar-menu">
                        <li {{ route == 'admin_homepage' ? 'class="active"' }}>
                            <a href="{{ path('admin_homepage') }}">
                                <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                            </a>
                        </li>
                        <li {{ route == 'post_create' ? 'class="active"' }}>
                            <a href="index.html">
                                <i class="fa fa-pencil-square-o"></i> <span>Create Post</span>
                            </a>
                        </li>
                    </ul>
                </section>
            </aside>
            <div class="right-side">
                <section class="content">
                    {% block content %}
                        <p>Content goes here</p>
                    {% endblock %}
                </section>
            </div>
        </div>
        <script src="/js/library/jquery.min.js" type="text/javascript"></script>
        <script src="/js/library/bootstrap.min.js" type="text/javascript"></script>
        <script src="/js/code/admin.js" type="text/javascript"></script>
    </body>
</html>

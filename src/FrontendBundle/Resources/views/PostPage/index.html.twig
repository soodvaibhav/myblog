{% extends 'FrontendBundle::base.html.twig' %}
{% block container %}
    <div class="col-md-8">
		<article class="blog-post">
			<div class="blog-post-body">
				<h2>{{ post.title }}</h2>
				<div class="post-meta"><span>by <a href="#">Sameera Sood</a></span>/<span><i class="fa fa-clock-o"></i>{{ post.dateTime|date("F j, Y", false) }}</span></div>
				<div class="blog-post-text">{{ post.content|raw }}</div>
			</div>
		</article>
	</div>
{% endblock %}
